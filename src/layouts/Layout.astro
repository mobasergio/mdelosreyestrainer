---
import '../styles/globals.css';

const { 
  title = "María de los Reyes - Personal Trainer",
  description = "Transform your body and life with personalized training programs from certified personal trainer María de los Reyes."
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="font-sans antialiased">
    <slot />
    <script src="../scripts/fade-in-observer.ts"></script>
  </body>
</html>
